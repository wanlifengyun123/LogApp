<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:descendantFocusability="blocksDescendants" > 
        
        
        <CheckBox
            android:id="@+id/btn_check"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:button="@drawable/btn_check"
            android:layout_margin="12dp" />

        <ImageView
            android:id="@+id/img_goods"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/load_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size"
                android:text="潮诺聚合物苹果移动电源5s充电宝10000毫安以上通用三星小米 金色 天书" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_name"
                android:layout_alignLeft="@+id/tv_goods_name"
                android:layout_marginTop="6dp"
                android:textSize="@dimen/small_medium_text_size"
                android:textColor="@color/black"
                android:text="￥99.00" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_goods_name"
                android:layout_below="@+id/tv_goods_price"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/btn_cart_reduce"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shopping_cart_product_num_reduce" />

                <Button
                    android:id="@+id/btn_cart_num_edit"
                    android:layout_width="38dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    android:background="@drawable/btn_shopping_cart_product_num_edit"
                    android:textSize="@dimen/small_medium_text_size"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_cart_add"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/btn_shopping_cart_product_num_add" />
            </LinearLayout>

        </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
